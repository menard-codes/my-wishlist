generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model WishedProducts {
  productId     String
  customerId    String
  shopDomain    String
  productName   String
  createdAt     DateTime  @default(now())
  isAddedToCart Boolean   @default(false)
  addToCartDate DateTime?
  isPurchased   Boolean   @default(false)
  purchaseDate  Boolean?

  @@id([productId, customerId, shopDomain])
}
